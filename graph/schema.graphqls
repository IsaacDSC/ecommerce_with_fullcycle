# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Product {
  id: ID!
  code: String
  name: String!
  imageUrl: String!
  price: Int!
  description: String
  active: Boolean!
  categoryId: ID!
  Category: Category
}

type Category {
  id: ID!
  name: String!
}

input NewProduct {
  code: String
  name: String!
  imageUrl: String!
  price: Int!
  description: String
  active: Boolean!
  categoryId: ID!
}

input NewCategory {
    name: String!
}

input RetrieveByID{
  ID: ID!
}

type Query {
  products: [Product!]!
  categories: [Category!]!
  getProduct(input: RetrieveByID): Product!
  getCategory(input: RetrieveByID): Category!
}

type Mutation {
  createProduct(input: NewProduct!): Product!
  createCategory(input: NewCategory!): Category!
}
